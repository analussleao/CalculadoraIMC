<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Seu IMC é:"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        tools:text="Hello world" />

    <TextView

        android:id="@+id/tvClassificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="26sp"
        tools:text="Classificação: Normal"
        />

    <TextView
        android:id="@+id/referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valores de referência do IMC:"
        android:layout_marginLeft="35dp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="IMC menor que 18,5 = Abaixo do Peso"
        android:textColor="@color/teal_700"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="IMC entre 18,5 e 24,9 = Peso Normal"
        android:textColor="@color/teal_700"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="IMC entre 25,0 e 29,9 = Sobrepeso"
        android:textColor="@color/teal_700"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="IMC entre 30,0 e 39,9 = Obesidade"
        android:textColor="@color/teal_700"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="IMC maior que 39,9 = Obesidade Grave"
        android:textColor="@color/teal_700"
        android:layout_marginTop="5dp" />

</LinearLayout>